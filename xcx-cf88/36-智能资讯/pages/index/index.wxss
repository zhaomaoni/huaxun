/* pages/index/index.wxss */
.body-list-box{
  width: 100%;
  height: auto;
}
.tuiBg{
  width: 100%;
  height: 1.3rem;
  line-height: 1.3rem;
  color: #fff;
  text-align: center;
  font-size: 0.75rem;
  background: #a7d1ee
}
.section-list-box{
  width: 92%;
  height: 4.375rem;
  padding: 1.03125rem 0;
  margin: 0 auto;
  overflow: hidden;
  border-bottom: 1px solid #dcdcdc;
}
.left-list-box{
  width: 64%;
  min-height: 4.375rem;
  float: left;
}
.left-title-box{
  width: 100%;
  min-height: 3.0625rem;
  font-weight: 600;
  font-size: 0.9rem;
  display:-webkit-box;
  -webkit-line-clamp:3;
  -webkit-box-orient:vertical;
  overflow:hidden;
}

.left-bottom-box{
  width: 100%;
  height: 1.3125rem;
  font-size: 0.75rem;
  overflow: hidden
}
.close-main-box{
  float: left;
}
.close-main-box view{
  display: inline-block;
  height: 1.3125rem;
  line-height: 1.3125rem;
  color: #666;
  margin-right: 0.5rem;
}
.close-main-box .hot-main-box{
  color: #4990E2;
  height: 1rem;
  line-height: 1rem;
  padding: 0 0.1875rem;
  font-size: 0.6rem;
  border: 0.0625rem solid #4990E2;
}
.close-main-box .hot-main-box2{
  color: #F04141;
  height: 0.95rem;
  line-height: 0.95rem;
  font-size: 0.6rem;
  padding: 0 0.17rem;
  border: 0.0625rem solid #F04141;
}
.close-list-box{
  width: 0.75rem;
  height: 0.75rem;
  float: right;
  margin: 0.28125rem 0;
}
.close-list-box image{
  width: 100%;
  height: 100%;
  display: block;
}


.right-list-box{
  width: 32%;
  height: 4.375rem;
  float: right;
}
.right-list-box image{
  width: 100%;
  height: 100%;
  display: block
}

.red-box-layer{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0,0,0,0.5)
}
.blue-box-pic{
  width: 12rem;
  height: 14rem;
  background: #29335f;
  position: fixed;
  top: 50%;
  left: 50%;
  margin-left: -6rem;
  margin-top: -7rem;
  border-radius: 0.25rem;
}
.blue-close{
  width: 1.2rem;
  height: 1.2rem;
  float: right;
  overflow: hidden;
  margin: 0.5rem 0.625rem 0.25rem 0;
}
.blue-close image{
  width: 98%;
  height: 98%;
  display: block
}
.hb-pic{
  width: 8.8rem;
  height: 10.9296rem;
  margin: 2.1rem auto 0 auto;
  overflow: hidden
}
.hb-pic image{
  width: 100%;
  height: 100%;
  display: block
}
.shang-ci{
  width: 100%;
  height: 1.3rem;
  line-height: 1.3rem;
  text-align: center;
  font-size: 0.75rem;
  background: #f2f3f2;
  color: #61abdd;
}