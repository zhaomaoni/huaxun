/* pages/index/index.wxss */
/* 消息提示 */
.promptBox{
  width: 90%;
  height: 35px;
  line-height: 35px;
  margin: 0 auto;
}
.laba{
  width: 20px;
  height: 20px;
  float: left;
  padding: 10px 0;
}
.laba image{
  display: inline
}
.click{
  width: calc(100%-50px);
  height: 35px;
  overflow: hidden;
  font-size: 16px;
  color: #de494b;
  white-space: nowrap;
  padding-left: 5px;
  text-overflow: ellipsis;
}
.dian{
  width: 20px;
  height: 20px;
  padding: 7px 3px;
  float: left
}
.dian image{
  display: inline
}
.click text{
  line-height: 35px;
  font-size: 14px;
}

/* 标题 */
.title{
  width: 85%;
  height: 35px;
  line-height: 35px;
  margin: 0 auto;
}
.title view{
  width: 50%;
  text-align: center;
  font-size: 16px;
  float: left;
}
.title view:last-child{
  font-size: 14px;
  color: #666
}

/*地区选择*/
.areaBox{
  width: 100%;
  height: 35px;
  line-height: 35px;
  background: #f2f2f2
}
.areaBody{
  width: 85%;
  margin: 0 auto
}
.area{
  color: #666;
  font-size: 14px;
  float: left;
}
.areaPic{
  width: 20px;
  height: 20px;
  padding: 7px 0;
  float: right;
}
.areaPic image{
  display: inline
}

/*  主体部分  */
.MainBox{
  width: 100%;
  height: auto;
  display: block
}
.MainBox2{
  display: none
}
.conBody{
  width: 90%;
  height: 70px;
  margin: 10px auto;
  border-radius: 3px;
  line-height: 70px;
  background: #d7d7d7
}
.content{
  width: 90%;
  font-size: 18px;
  margin: 0 auto
}
.left{
  float: left;
}
.right{
  float: right;
}
.num{
  font-weight: 600;
  padding-right: 10px;
}
.jing{
  font-size: 12px;
  position: relative;
  top: -8px;
  left: -8px;
}
.right text{
  font-size: 26px;
  font-weight: 600;
  padding-right: 10px;
}
/*  banner  */
.banner{
  width: 100%;
  height: 89px;
  margin-top: 15px;
}
.navImg{
  display: inline
}

/*  图表  */
.charts{
  width: 89%;
  height: 200px;
  margin: 20px auto 0 auto;
  border: 2px solid #444;
  display: none
}
.charts2{
  display: block
}
.canvas {
    width: 100%;
    height: 195px;
} 

/*  区域选择  */
.areaCheck{
  width: 100%;
  height: auto;
  line-height: 35px;
  text-align: center;
  background: #f2f2f2;
  display: none
}
.ccc{
  background: #ccc
}
.areaCheck2{
  display: block
}
.areaCheck view text{
  height: 35px;
  display: block
}
.areaCheck view .bg{
  background: #e4e4e4;
}
/* more小程序 */
.layerBoxs{
  width: auto;
  height: 26px;
  line-height: 26px;
  position: fixed;
  right: 0px;
  bottom: 100px;
  color: #fff;
  background: rgba(0,0,0,0.7);
  font-size: 12px;
  text-align: center;
  border-top-left-radius: 100px;
  border-bottom-left-radius: 100px
}
.layerBoxs view{
  padding: 0 10px;
}