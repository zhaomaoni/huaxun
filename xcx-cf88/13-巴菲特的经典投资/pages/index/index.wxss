/* pages/index/index.wxss */
.conBox{
  width: 100%;
  height: 46px;
  overflow: hidden;
}
.swiper-tab{  
  width: 100%;
  height: 45px;
  line-height: 43px;
  background:#fff;
  position: fixed;
  z-index: 999;
  overflow: hidden;
  border-bottom: 1px solid #ddd;  
}
.swiper-tab-list{ 
  display: inline-block;  
  width: 33.3%;  
  color: #333;
  text-align: center;
  font-size: 17px;
}  
.on{ 
  color: #000;
  border-bottom: 2px solid #f04141;
}
.swiper-box{ 
  display: block; 
  height: auto; 
  width: 100%;
  overflow: hidden; 
}

/*要闻*/
.navImg{
  width: 100%;
  height: 89.6px;
}
.main{
  width:93%;
  margin:0 3.5%;
  padding:15px 0;
  border-bottom: 1px solid #ddd;
  overflow: hidden
}
.main_scroll{
  width: 100%;
  margin:0;
  padding: 5px 0;
  border-bottom: 0;
}
.borders{
  width: 92%;
  margin: 0 auto;
  padding-top: 5px;
  border-bottom: 1px solid #ddd
}
.scroll_roll{
  width: 100%;
  height: 10000px;
}
.solid{
  width: 1px;
  height: 100%;
  position: fixed;
  left:3.25%;
  border-left:2px solid #fde7e7;
}
.main_scroll .timeBox{
  width:90%;
  padding: 0 5%;
}
.main_scroll .content{
  width:90%;
  padding: 0 5%;
}
.title{
  max-height: 48px;
  font-size: 16px;
  line-height: 24px;
  font-weight: 500;
  overflow: hidden;
  color: #333;
  display: block;
}
.content{
    margin: 5px 0;
    font-size: 13px;
    line-height: 18px;
    max-height: 37px;
    overflow: hidden;
    color: #000;
    display: block;
}
.timeBox{
  width: 100%;
  max-height: 37px;
  font-size: 12px;
  line-height:18px;
  overflow: hidden;
}
.times{
  margin: 5px 0;
  color: #999;
  line-height:18px;
  padding-right:10px;
  max-height: 37px;
  font-size: 12px;
  float: left;
  position: relative
}
.circle:after {
  content:'';
  display:table;
  width:4px;
  height:4px;
  background:#f04141;
  border-radius:50%;
  position: absolute;
  left: -0.42rem;
  top: 8px
}
.times2{
  margin: 5px 0;
  color: #999;
  float: right;
  padding-right:10px;
}
.from{
  margin: 5px 0;
  font-size: 12px;
  line-height: 18px;
  max-height: 37px;
  overflow: hidden;
  color: #999;
  float: left
}
/* more小程序 */
.layerBoxs{
  width: auto;
  height: 26px;
  line-height: 26px;
  position: fixed;
  right: 0px;
  bottom: 100px;
  color: #fff;
  background: rgba(0,0,0,0.7);
  font-size: 12px;
  text-align: center;
  border-top-left-radius: 100px;
  border-bottom-left-radius: 100px
}
.layerBoxs view{
  padding: 0 10px;
}