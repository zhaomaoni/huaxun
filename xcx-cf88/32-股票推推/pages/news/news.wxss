/* pages/news/news.wxss */
.list-body-box{
  width: 100%;
  height: auto;
}
.list-main-box{
  width: 92%;
  height: auto;
  margin: 0 auto;
  padding: 0.75rem 0;
  border-bottom: 1px solid #f2f2f2;
  overflow: hidden;
}
.list-left-box{
  width: 70%;
  font-size: 0.875rem;
  font-weight: 600;
}
.list-left-box view:first-child{
  width: 100%;
  height: 2.5rem;
  overflow: hidden;
}
.list-left-box view:last-child{
  color: #666;
  font-size: 0.75rem;
  font-weight: normal;
  padding-top: 0.3125rem;
}
.list-right-box{
  width: 5.47rem;
  height: 3.6rem;
  float: right;
  overflow: hidden;
}
.list-right-box image{
  width: 100%;
  height: 100%;
}
.datebox{
  float: right;
  padding-right: 1rem;
}