/* pages/hisfile/hisflie.wxss */
page{
  background: #522E7A;
  font-family: PingFangSC-Regular;
}
.my-history-box{
  width: 89.3%;
  height: auto;
  margin: 0 auto;
  margin-top: 1.4375rem;
  background:  rgba(83,37,116,0.80);
  border-radius: 5px;
  padding: 15px 0;
}
.my-history-title{
  height: 1.4375rem;
  width: 90%;
  margin: 0 auto;
  font-size: 1rem;
  color: #fff;
}
.my-history-main{
  width: 90%;
  height: auto;
  margin: 0 auto;
}
.my-mian-title{
  height: 2rem;
  line-height: 2rem;
  font-size: 0.75rem;
  color: #fff;
  border-bottom: 1px solid #dcdcdc
}
.my-mian-title .my-jt{
  width:0.5rem;
  height:0.5rem;
  float:right;
  margin-top:0.6rem;
  margin-right:0.4rem;
  border-right:1px solid #999;
  border-bottom:1px solid #999;
  transform:rotate(45deg);
}
.my-mian-title .my-jt2{
  transform: rotate(-135deg);
  margin-top:0.85rem;
}
.my-show-box{
  width: 100%;
  height: auto;
  margin-bottom: 0.75rem;
  overflow: hidden;
  display: none
}
.my-show2{
  display: block
}
.my-show-hide{
  height: 1.56rem;
  line-height: 1.56rem;
  width: 100%;
  color: #fff;
  margin-top: 0.75rem;
  font-size: 0.875rem;
}
.my-show-hide text{
  color: #fff
}
.my-pic-box{
  float: right;
  width: 3rem;
  height: 1.56rem;
  overflow: hidden;
}
.my-pic-box image{
  width: 100%;
  height: 100%;
}
.history-no-pic{
  width:100%;
  height:11.5rem;
  overflow:hidden;
  margin:0 auto;
}
.history-no-pic image{
  width: 100%;
  height: 100%;
}
.his-no-h{
  width: 100%;
  height: 2.1875rem;
  margin: 0 auto;
  text-align: center;
  font-size: 1.5625rem;
  font-weight: 600;
  margin-top: 1.3rem;
  color: #fff;
  margin-bottom: 0.5rem;
}
.his-no-p{
  font-size: 1.25rem;
  opacity: 0.8;
  color: #fff;
  text-align: center;
  margin-bottom: 1.5625rem;
}
.his-bno-btn{
  width: 84%;
  height: 2.8125rem;
  background-image: linear-gradient(90deg, #F7941C 0%, #F7DA71 100%);
  border-radius: 0.3125rem;
  margin: 0 auto;
  font-size: 1.12rem;
  text-align: center;
  line-height: 2.8125rem;
  color: #fff;
}