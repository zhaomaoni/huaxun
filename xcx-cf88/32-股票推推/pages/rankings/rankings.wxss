page{
  background: #663189
}
.header{
  width: 100%;
  height: 1.75rem;
  margin: 0 auto;
  padding: 1rem 0;
  text-align: center;
  overflow: hidden;
}
.header label{
  padding: 0 5px;
  font-size: 1.125rem;
  line-height: 1.75rem;
  font-weight: 600;
  color: #fff;
  display: inline-block
}
.header label text{
  color: #FFEB3B
}
.header image{
  width: 1.15rem;
  height: 1.15rem;
  vertical-align: middle;
  padding-bottom:5px;
}
.content2-box{
  color: #fff;
  text-indent: 1rem;
  font-size: 0.75rem
}
.rank-title-box{
  width: 94.7%;
  height: 2.375rem;
  overflow: hidden;
  margin: 0 auto 1rem auto;
  background: rgba(83,37,116,0.80);
  border: 1px solid #FFFFFF;
  border-radius: 0.3125rem;
}
.rank-title-box view{
  width: 50%;
  height: 2.375rem;
  float: left;
  line-height: 2.375rem;
  color: #ad8ebc;
  text-align: center;
  font-size: 1rem;
}
.rank-title-box .on{
  background: #fff;
  color: #400D70
}

.content-box{
  width: 94.7%;
  height: auto;
  background: rgba(83,37,116,0.80);
  border-radius: 0.3125rem;  
  margin: 0 auto 1.5rem auto;
}
/*.content-box2{
  display: block
} */

.main-list-box{
  width: 94%;
  height: 4rem;
  overflow: hidden;
  margin: 0 auto;
  padding: 0.75rem 0;
  border-bottom: 1px solid #663583
}
.main-list-box:last-child{
  border-bottom: none
}
.main-num{
  float: left;
  line-height: 4rem;
  color: #fff
}
.main-pic-box{
  width: 2.8125rem;
  height: 2.8125rem;
  border-radius: 100%;
  overflow: hidden;
  float: left;
  margin: 0.6rem 0.5rem 0.6rem 0.5rem 
}
.main-pic-box image{
  width: 100%;
  height: 100%;
}
.main-txt-box{
  font-size: 0.75rem;
  color: #fff;
  margin: 0.9rem 0;
  overflow: hidden
}
.main-name{
  font-size: 1rem;
  line-height: 1.625rem;
  color: #fff;
}
.main-name text{
  width: 3.625rem;
  height: 1rem;
  float: right;
  text-align: center;
  color: #fff;
  line-height: 1rem;
  font-size: 0.75rem;
  margin: 0.3125rem 0;
  margin-right: 1rem;
}
.main-you{
  color: #ab8bba
}
.main-txt-box2{
  margin: 0
}
.main-txt-box2 .main-sum{
  color: #ab8bba
}
.main-name2 text{
  background: linear-gradient(90deg, #ee6723 0%, #fed556 100%);
  border-radius: 0.125rem;
}
.rank-box{
  width: 100%;
  height: auto;
  overflow: hidden
}