/* pages/search/search.wxss */
page{
  background: url("https://api.51gsl.com/program/Constellation/images/zg_bk.png") no-repeat left center;
  background-size: 100% 100%;
  background-attachment: fixed;
}
.inpBox{
  width: 92%;
  height: 46px;
  margin: 15px auto;
  position: relative;
  overflow: hidden;
  display: flex;
  border: 1px solid #c2c1c1;
  border-radius: 50px;
  background: rgba(255,255,255,0);
}
.valBox{
  flex: 1;
  width: auto;
  height: 46px;
}
.inpBox input{
  height: 44px;
  font-size: 16px;
  line-height: 44px;
  color: #fff;
  padding-left: 24px;
  min-height: auto;
}
.picBox{
  width: 22px;
  height: 22px;
  padding: 13px 10px;
}
.picBox .pic{
  width: 100%;
  height: 100%;
  display: block
}
.listBox{
  width: 85%;
  max-height: 343px;
  overflow-y: scroll;
  margin: -15px auto 90px auto;
  color: #fff;
  overflow-x: hidden;
  display: none
}
.show{
  display: block
}
.list{
  height: 48px;
  line-height: 48px;
  width: 100%;
  font-size: 14px;
  margin: 0 auto;
  text-indent:10px;
  background: rgba(255,255,255,0);
  border-bottom: 1px solid #ccc
}
.bg{
  background: rgba(255,255,255,0.4)
}
.list::after{
  content: "";
  background: url("https://api.51gsl.com/program/Constellation/images/icon_right.png") no-repeat right center;
}
.noDataBox{
  width: 100%;
  height: auto;
  margin: 0 auto;
  overflow: hidden;
  display: none
}
.noPic{
  width: 100px;
  height: 75px;
  margin: 72px auto 0 auto;
}
.noPic image{
  width: 100%;
  height: 100%;
}
.noMsg{
  width: 100%;
  padding-top: 26px;
  font-size: 14px;
  color: #fff;
  text-align: center
}
.show2{
  display: block
}

/*  banner  */
.banner{
  width: 100%;
  height: 89px;
  position: fixed;
  bottom: 0;
  overflow: hidden
}
.navImg{
  width: 100%;
  height: 100%
}
/* more小程序 */
.layerBoxs{
  width: auto;
  height: 26px;
  line-height: 26px;
  position: fixed;
  right: 0px;
  bottom: 100px;
  color: #fff;
  background: rgba(0,0,0,0.7);
  font-size: 12px;
  text-align: center;
  border-top-left-radius: 100px;
  border-bottom-left-radius: 100px
}
.layerBoxs navigator{
  padding: 0 10px;
}