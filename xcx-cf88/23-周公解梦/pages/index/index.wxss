/* pages/index/index.wxss */
page{
  background: url("https://api.51gsl.com/program/Constellation/images/zg_bk.png") no-repeat left center;
  background-size: 100% 100%;
}
.searchBox{
  width: 92%; 
  height: 46px;
  overflow: auto; 
  margin: auto;
  position: absolute;
  left: 50%;
  top: 37%;
  margin-left: -46%;
  margin-top: -25px;
}
.searchInp{
  min-height: auto;
  height: 44px;
  font-size: 16px;
  border: 1px solid #c2c1c1;
  border-radius: 50px;
  color: #fff;
  text-indent: 24px;
  background: rgba(255,255,255,0.022)
}
.phColor{
  color: #fff
}
.picBox{
  width: 22px;
  height: 22px;
  overflow: hidden;
  position: absolute;
  right: 15px;
  top: 13px;
}
.picBox .pic{
  width: 100%;
  height: 100%;
  display: block
}
/*  banner  */
.banner{
  width: 100%;
  height: 89px;
  position: fixed;
  bottom: 0;
  overflow: hidden
}
.navImg{
  width: 100%;
  height: 100%
}
/* more小程序 */
.layerBoxs{
  width: auto;
  height: 26px;
  line-height: 26px;
  position: fixed;
  right: 0px;
  bottom: 100px;
  color: #fff;
  background: rgba(0,0,0,0.7);
  font-size: 12px;
  text-align: center;
  border-top-left-radius: 100px;
  border-bottom-left-radius: 100px
}
.layerBoxs navigator{
  padding: 0 10px;
}