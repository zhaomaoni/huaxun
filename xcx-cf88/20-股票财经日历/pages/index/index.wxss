/* pages/index/index.wxss */
.headerBox{
  width: 100%;
  height: 60px;
  display: flex;
  padding: 5px 0 0 0;
}
.headLeft{
  height: 60px;
  flex: 1;
}
.head{
  float: left;
  width: 21.5%;
  margin-left: 2.5%;
  text-align: center;
  border-radius: 3px;
  margin-top: 5px;
  padding: 3px 0;
  font-size: 13px;
}
.bg{
  background: pink;
}
.head view{
  line-height: 20px;
}
.headRight{
  height: 35px;
  line-height: 35px;
  font-size: 12px;
  color: #de494b;
  text-align: center;
  padding: 0 10px;
  border-radius: 5px;
  border: 1px solid #de494b;
  margin: 12px 10px 12px 5px;
}
/*tab切换*/
.conBox{
  width: 92%;
  height: 40px;
  margin: 0 auto;
}
.swiper-tab{  
  width: 100%;
  height: 40px;
  line-height: 38px;
  z-index: 999;
}
.swiper-tab-list{ 
  display: inline-block;  
  width: 50%;  
  color: #333;
  text-align: center;
  font-size: 17px;
}  
.on{
  height: 37px;
  line-height: 38px;
  color: #de494b;
  border-bottom: 2px solid #de494b;
}
.swiper-box{ 
  display: block; 
  height: auto; 
  width: 100%;
}
/*content*/
.scrollBox{
  width: 92%;
  height: auto;
  border-bottom: 1px solid #bbb;
  margin: 10px auto;
  padding: 0 0 5px 0;
  overflow: hidden
}
.scrollBox:last-child{
  border-bottom: 0
}
.mainHead{
  height: 40px;
}
.time{
  font-weight: 600;
  font-size: 18px;
  color: #de494b;
  line-height: 40px;
}
.type{
  font-size: 12px;
  color: #000;
  padding: 3px 10px;
  margin-left: 10px;
}
.typeRbg{
  color: #fff;
  background: #de494b;
  border: 1px solid #de494b;
}
.typeRbk{
  color: #de494b;
  border: 1px solid #de494b;
}
.typeGbg{
  color: #fff;
  background: #24b166;
  border: 1px solid #24b166;
}
.typeGbk{
  color: #24b166;
  border: 1px solid #24b166;
}
.typeYbg{
  color: #fff;
  background: #fda838;
  border: 1px solid #fda838;
}
.typeYbk{
  color: #fda838;
  border: 1px solid #fda838;
}
.typeWbg{
  color: #fff;
  background: #666;
  border: 1px solid #666;
}
.typeWbk{
  color: #666;
  border: 1px solid #666;
}
.starBox{
  display: inline-block;
  width: 70px;
  height: 15px;
  position: relative;
  margin-left: 10px;
}
.star{
  width: 40%;
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  background: url(https://api.51gsl.com/program/Rili/image/yellow.jpg) 0 0 no-repeat;
  background-size: 70px;
}
.yellowStar{
  width: 20%;
  background: url(https://api.51gsl.com/program/Rili/image/yellow.jpg) 0 0 no-repeat;
  background-size: 70px;
}
.redStar{
  width: 60%;
  background: url(https://api.51gsl.com/program/Rili/image/red.jpg) 0 0 no-repeat;
  background-size: 70px;
}
.city{
  float: right;
  line-height: 40px;
  font-size: 14px;
}
.country{
  float: right;
  width: 25px;
  height: 25px;
  border: 1px solid #ccc;
  border-radius: 50%;
  margin: 6px 0;
}
.country image{
  width: 100%;
  height: 100%
}
.title{
  line-height: 30px;
  font-size: 17px;
}
.starBottom{
  line-height: 30px;
}
.starBottom view{
  width: 33.3%;
  float: left;
  color: #999;
  font-size: 14px;
}
.starBottom view:nth-child(2){
  text-align: center
}
.starBottom view:last-child{
  text-align: right
}
swiper-item {
  overflow: scroll
}
.none{
  width: 100%;
  height: auto;
  margin: 50px 0
}
.pic{
  width: 100px;
  height: 100px;
  margin: 0 auto
}
.pic image{
  width: 100%;
  height: 100%;
}
.noTxt{
  text-align: center;
  font-size: 14px;
  line-height: 40px;
}

/* more小程序 */
.layerBoxs{
  width: auto;
  height: 26px;
  line-height: 26px;
  position: fixed;
  right: 0px;
  bottom: 100px;
  color: #fff;
  background: rgba(0,0,0,0.7);
  font-size: 12px;
  text-align: center;
  border-top-left-radius: 100px;
  border-bottom-left-radius: 100px
}
.layerBoxs view{
  padding: 0 10px;
}