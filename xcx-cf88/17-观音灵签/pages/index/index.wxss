/* pages/index/index.wxss */
.page{
  margin-bottom: 100px;
}
.title{
  width: 100%;
  height: 35px;
  font-size: 14px;
  line-height: 35px;
  text-align: center;
  background: #f2f2f2;
}
.qian{
  width: 75%;
  height: auto;
  margin: 50px auto 0 auto;
  overflow: hidden;
  text-align: center;
  font-size: 16px;
  line-height: 30px;
}
.yao{
  font-weight: 600
}
.pic{
  width: 80px;
  height: 150px;
  margin: 20px auto;
}
.pic image{
  width: 100%;
  height: 100%;
  vertical-align: middle
}
.btn{
  width: 85%;
  height: 50px;
  background: #de494b;
  color: #fff;
  line-height: 50px;
  font-weight: 600;
  text-align: center;
  border-radius: 5px;
  margin: 20px auto 10px auto;
  display: none
}
.btn2{
  display: block
}
/*  banner  */
.banner{
  width: 100%;
  height: 89px;
  margin-top: 15px;
  position: fixed;
  bottom: 0;
}
.navImg{
  display: inline
}

/* more小程序 */
.layerBoxs{
  width: auto;
  height: 26px;
  line-height: 26px;
  position: fixed;
  right: 0px;
  bottom: 100px;
  color: #fff;
  background: rgba(0,0,0,0.7);
  font-size: 12px;
  text-align: center;
  border-top-left-radius: 100px;
  border-bottom-left-radius: 100px
}
.layerBoxs view{
  padding: 0 10px;
}