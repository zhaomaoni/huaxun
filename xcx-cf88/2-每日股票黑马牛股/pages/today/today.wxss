/***** 复制微信号 *****/
.copy{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
  display: none;
  z-index: 999
}
.copy2{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
  display: block;
  z-index: 999
}
.phone{
  width: 220px;
  height: 190px;
  background: #fff;
  position: fixed;
  left: 50%;
  margin-left: -110px;
  top: 50%;
  margin-top: -95px;
  border-radius: 4px;
}
.phone image{
  width: 70px;
  height: 65px;
  position: relative;
  left: 50%;
  margin-left: -35px;
  top: 10px;
  padding-bottom: 13px;
}
.knowBtn{
  width: 200px;
  height: 37px;
  color: #fff;
  margin: 0 auto;
  background: #de494b;
  line-height: 37px;
}
.succ{
  text-align: center;
  font-size: 16px;
  color: #333;
  padding-bottom: 10px;
}
.blag{
  text-align: center;
  font-size: 13px; 
  padding-bottom: 15px;
}