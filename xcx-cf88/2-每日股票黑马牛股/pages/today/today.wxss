}
.addBox{
  margin: 5px;
  background: #fff;
  padding-bottom: 15px;
  border-radius: 4px
}
.wen{
  width: 100%;
  font-size: 16px;
  padding: 20px 0 16px 0;
  font-weight: 600;
  text-align: center;
  color: #333;
}
.add{
  font-size: 14px;
  text-align: center;
  padding-bottom: 16px;
  color: #1e1e1e;
}
.add text{
  color: #e05456
}
.copyBtn{
  background: #de494d;
  font-size: 14px;
  height: 37px;
  line-height: 37px;
  color: #fff;
  width: 92%;
  margin: 0 auto;
  border-radius: 4px;
}
