/* pages/index/index.wxss */
.conBox{
  width: 100%;
  height: 46px;
  overflow: hidden;
}
.swiper-tab{  
  width: 100%;
  height: 45px;
  line-height: 43px;
  background:#fff;
  position: fixed;
  z-index: 999;
  overflow: hidden;
  border-bottom: 1px solid #ddd;  
}
.swiper-tab-list{ 
  display: inline-block;  
  width: 33.3%;  
  color: #333;
  text-align: center;
  font-size: 14px;
}  
.on{ 
  color: #de494b;
  border-bottom: 2px solid #f04141;
}
.swiper-box{ 
  display: block; 
  height: auto; 
  width: 100%;
  margin-bottom:90px;
  overflow: hidden; 
}

/*商业*/
.scroll_roll{
  width: 100%;
  height: 10000px;
}
.shangBox{
  width: 100%;
  height: auto;
}
.shangBox .inp-box{
  width: 100%;
  height: 50px;
  line-height: 50px;
  margin: 0 auto;
  overflow: hidden;
  border-bottom: 1px solid #f1f1f1
}
.shangBox .btn{
  border-bottom: 0;
  margin: 0 auto;
  margin-top: 15px;
  height: 50px;
  line-height: 50px;
  overflow: hidden;
  background: #de494b;
  font-size: 16px;
  font-weight: 600;
  width: 80%;
  text-align: center;
  padding-left: 0;
  color: #fff;
  border-radius: 5px;
}
.shangBox view text{
  float: left;
  width: 26%;
  margin-left: 4%;
}
.shangBox .wan{
  float: right;
  width: 70%;
  display: flex;
  overflow: hidden;
}
.shangBox .wan input{
  width: 95%;
  height: 49px;
  line-height: 49px;
  text-align: right;
}
.shangBox .wan label{
  width: 7%;
  flex: 1;
  height: 50px;
  margin-right: 4%;
  line-height: 50px;
}
.shangBox .year{
  width:66%;
  height: 50px;
  line-height: 50px;
  text-align:right;
  border-bottom:0;
  float:right;
  margin-right:3%;
}
.pic{
  position: fixed;
  bottom: 0px;
  width: 100%;
  height: 89px;
}
.pic image{
  width: 100%;
  height: 100%
}
.section{
  font-size:28rpx;
  margin-left: 50rpx;
  margin-top: 30rpx;
}
.yes{display: block}
.off{display: none}

/* more小程序 */
.layerBoxs{
  width: auto;
  height: 26px;
  line-height: 26px;
  position: fixed;
  right: 0px;
  bottom: 100px;
  color: #fff;
  background: rgba(0,0,0,0.7);
  font-size: 12px;
  text-align: center;
  border-top-left-radius: 100px;
  border-bottom-left-radius: 100px
}
.layerBoxs view{
  padding: 0 10px;
}