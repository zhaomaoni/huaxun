/* pages/content/content.wxss */
.conBox{
  width: 100%;
  height: 46px;
  overflow: hidden;
}
.swiper-tab{  
  width: 100%;
  height: 45px;
  line-height: 43px;
  background:#fff;
  position: fixed;
  z-index: 999;
  overflow: hidden;
  border-bottom: 1px solid #ddd;  
}
.swiper-tab-list{ 
  display: inline-block;  
  width: 50%;  
  color: #333;
  text-align: center;
  font-size: 14px;
}  
.on{ 
  color: #de494b;
  border-bottom: 2px solid #f04141;
}
.swiper-box{ 
  display: block; 
  height: auto; 
  width: 100%;
  overflow: hidden; 
}

/*商业*/
.scroll_roll{
  width: 100%;
  height: 10000px;
}
.shangBox{
  width: 100%;
  height: auto;
}
.shangBox view{
  height: 50px;
  line-height: 50px;
  margin: 0 auto;
  padding-left: 20px;
  border-bottom: 1px solid #f1f1f1
}
.shangBox .btn{
  border-bottom: 0;
  margin-top: 15px;
  background: #de494b;
  font-size: 16px;
  font-weight: 600;
  width: 80%;
  text-align: center;
  padding-left: 0;
  color: #fff;
  border-radius: 5px;
}
.shangBox view text{
  float: left
}
.shangBox view view{
  padding-left: 0
}
.shangBox .wan{
  float: right;
  padding-right: 15px;
}
.shangBox .wan input{
  padding-right: 5px;
  float: left;
  height: 20px;
  line-height: 20px;
  text-align: right;
  margin: 15px 0;
}
.shangBox .year{
  height: 20px;
  line-height: 20px;
  text-align: right;
  margin: 15px 0;
  float: right;
  padding-right: 15px;
  border-bottom:0;
}
.pic{
  position: fixed;
  bottom: 0px;
  width: 100%;
  height: 89px;
}
.pic image{
  width: 100%;
  height: 100%
}
.NameTab{
  height: 35px;
  line-height: 35px;
  background: #f1f1f1;
  padding-left: 15px;
}
.addss{
  margin-bottom: 90px;
}