/* pages/index/index.wxss */
@import "/wxParse/wxParse.wxss";
.main{
  width: 100%;
  height: auto;
  overflow: hidden;
  margin-bottom: 90px;
}
.body{
  width: 92%;
  height: auto;
  margin: 10px auto;
  padding: 4px 0;
  background-image: -webkit-linear-gradient(90deg,#ffe5de,#fff0ec);
  border: 1px solid #fac8c8;
  border-radius: 5px;
}
.body:nth-child(3n){
  background-image: -webkit-linear-gradient(90deg,#e2f1ff,#ecf6ff);
  border: 1px solid #a6dffd
}
.body:nth-child(3n+1){
  background-image: -webkit-linear-gradient(90deg,#fee7cb,#fff2e2);
  border: 1px solid #fbd698
}
.body_box{
  width: 97%;
  margin: 0 auto;
  height: auto;
  overflow: hidden
}
.left{
  width: 138px;
  height: 94px;
  float: left;
  overflow:hidden;
}
.pic{
  width: 100%;
  height: 100%
}
.rig{
  margin-left: 152px;
}
.rig view{
  font-size: 12px;
  color: #999;
  line-height: 25px;
}
.rig .title{
  font-size: 15px;
  color: #000;
  padding: 10px 0 5px 0;
}
/*  banner  */
.banner{
  width: 100%;
  height: 89px;
  position: fixed;
  bottom: 0;
  overflow: hidden
}
.navImg{
  width: 100%;
  height: 100%
}
/* more小程序 */
.layerBoxs{
  width: auto;
  height: 26px;
  line-height: 26px;
  position: fixed;
  right: 0px;
  bottom: 100px;
  color: #fff;
  background: rgba(0,0,0,0.7);
  font-size: 12px;
  text-align: center;
  border-top-left-radius: 100px;
  border-bottom-left-radius: 100px
}
.layerBoxs view{
  padding: 0 10px;
}