/* pages/index/index.wxss */
@import "/wxSearch/wxSearch.wxss";
.body{
  width: 100%;
  padding-bottom: 180px;
  background: url("https://api.51gsl.com/program/Ths/image/1.jpg") no-repeat left top;
  background-size: 100% 100%;
  position: relative;
}
.search{
  width: 80%;
  height: 35px;
  display: flex;
  font-size: 14px;
  position: absolute;
  background: #ccc;
  bottom: 10px;
  left: 50%;
  margin-left: -40%;
}
.bigBox{
  width: 100%;
  height: 1000px;
  overflow: hidden
}
.search input{
  height: 33px;
  border: 1px solid #ccc;
  float: left;
  flex: 1;
  background: #fff;
}
.search view{
  background: #de494b;
  color: #fff;
  padding: 0 15px;
  line-height: 35px;
  z-index: 999
}
/*历史记录*/
.history{
  height: 40px;
  line-height: 40px;
  font-size: 14px;
  border-bottom: 1px solid #ccc
}
.his{
  width: 90%;
  margin: 0 auto;
}
.hisLeft{
  float: left;
}
.hisLeft::before{
  content: "";
  border-left: 5px solid #de494b;
  padding-left: 5px;
}
.hisRig{
  float: right;
  width: 40px;
  color: #fff;
  height: 20px;
  font-size: 12px;
  border-radius: 3px;
  line-height: 20px;
  text-align: center;
  background: #de494b;
  margin: 10px 0;
}
.hisCheck{
  width: 92%;
  height: auto;
  margin: 0 auto;
}
.hisCheck view{
  width: 30%;
  height: 28px;
  line-height: 28px;
  float: left;
  font-size: 14px;
  text-align: center;
  border-radius: 5px;
  margin: 15px 1.3% 0 1.3%;
  border: 1px solid #ccc;
}
/*广告*/
.pic{
  position: fixed;
  bottom: 0px;
  width: 100%;
  height: 89px;
}
.pic image{
  width: 100%;
  height: 100%
}

/* more小程序 */
.layerBoxs{
  width: auto;
  height: 26px;
  line-height: 26px;
  position: fixed;
  right: 0px;
  bottom: 100px;
  color: #fff;
  background: rgba(0,0,0,0.7);
  font-size: 12px;
  text-align: center;
  border-top-left-radius: 100px;
  border-bottom-left-radius: 100px
}
.layerBoxs view{
  padding: 0 10px;
}