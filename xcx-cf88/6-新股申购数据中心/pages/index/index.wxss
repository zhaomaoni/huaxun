/* pages/index/index.wxss */
page{
  background: #f2f2f2
}
.new-srock-box{
  width: 100%;
  height: 2.5rem;
  border-top: 1px solid #f2f2f2;
  padding: 0.6rem 0;
  overflow: hidden;
  background: #fff;
  margin-bottom: 0.625rem;
}
.new-srock-box view{
  width: 20%;
  float: left;
  font-size: 0.7rem;
  text-align: center;
  font-weight: 600;
}
.new-srock-box view text{
  display: block;
}
.new-and{
  line-height: 1.25rem;
}
.new-and2{
  line-height: 2.5rem;
}

.new-txt-main{
  width: 80%;
  height: 2rem;
  margin: 0.625rem auto;
  font-size: 0.7rem;
  line-height: 1rem;
  color: #333;
}
.new-txt-main text{
  color: #ff5000
}

.main-strock-box{
  width: 100%;
  height: auto;
  background: #fff;
  margin-bottom: 0.625rem;
}
.main-box .main-strock-box:last-child{
  margin-bottom: 5.5625rem;
}
.main-strock-date{
  width: 100%;
  height: 2.2rem;
  border-bottom: 1px solid #ccc;
  font-size: 0.85rem;
  text-indent: 0.625rem;
  line-height: 2.2rem;
  color: #333;
}
.blue{
  color: #2f5895
}
.red{
  color: red
}
.origin{
  color: #ff5000
}

.main-strock-bottom{
  width: 100%;
  height: auto;
  font-size: 0.7rem;
  text-align: center;
  padding: 0.3125rem 0;
  overflow: hidden
}
.main-strock-bottom .li-storck{
  width: 20%;
  float: left;
  height: 2.125rem
}
.main-strock-bottom .li-storck view{
  line-height: 1.0625rem;
}
.main-strock-bottom .li-storck2{
  width: 20%;
  height: 2.125rem;
  float: left;
  line-height: 2.125rem
}
.weight{
  font-weight: 600
}

/*  banner  */
.banner{
  width: 100%;
  height: 89px;
  margin-top: 15px;
  position: fixed;
  bottom: 0;
  border-top: 1px solid #ccc
}
.navImg{
  display: inline
}

/* more小程序 */
.layerBoxs{
  width: auto;
  height: 26px;
  line-height: 26px;
  position: fixed;
  right: 0px;
  bottom: 100px;
  color: #fff;
  background: rgba(0,0,0,0.7);
  font-size: 12px;
  text-align: center;
  border-top-left-radius: 100px;
  border-bottom-left-radius: 100px
}
.layerBoxs view{
  padding: 0 10px;
}