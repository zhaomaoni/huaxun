/* pages/historys/histprys.wxss */
page { 
  background: url("https://api.51gsl.com/program/Luckdraw/images/icon_bg.png") no-repeat center center fixed;
  background-size: 100% 100%;
} 
/*记录 大奖*/
.history-msg{
  width: 93.6%;
  height: auto;
  overflow: hidden;
  margin: 1.2rem auto 1.5rem auto;
  background: #fff;
  border-radius: 0.5rem; 
}
.tab-title-box{
  width: 8.5rem;
  height: 2rem;
  margin: 1rem auto;
  color: #f15246;
  overflow: hidden;
  border: solid 1px #f15246;
  border-radius: 0.3125rem;
}
.tab-title-box view{
  float: left;
  height: 2rem;
  width: 50%;
  text-align: center;
  line-height: 2rem;
}
.tab-title-box .on{
  color: #fff;
  background: #f15246
}
.tab-centent-box{
  width: 91%;
  height: auto;
  margin: 0 auto;
}
.list-msg-box{
  width: 100%;
  height: auto;
  margin-bottom: 1.5rem;
}
.list-msg-box .list-msg{
  height: 2.5rem;
  width: 100%;
}
.list-msg-box .list-msg:nth-child(2n){
  background: #f6f6f6
}
.list-msg view{
  width: 33.3%;
  float: left;
  color: #333;
  text-align: center;
  line-height: 2.5rem;
  font-size: 0.75rem;
}
.list-msg .red{
  color: #f15246
}
.noData-box{
  width: 7rem;
  height: 9rem;
  margin: 7.5rem auto;
}
.noData-pic{
  width: 100%;
  height: 6rem;
}
.noData-pic image{
  width: 100%;
  height: 100%;
}
.noData-txt{
  color: #999;
  font-size: 1rem;
  line-height: 1.5rem;
  text-align: center;
}
.load-more{
  width: 100%;
  height: 1.2rem;
  line-height: 1.2rem;
  text-align: center;
  font-size: 0.75rem;
  color: #666;
  margin-top: 1rem;
}