/* pages/friend/friend.wxss */
page { 
  background: url("https://api.51gsl.com/program/Luckdraw/images/icon_bg.png") no-repeat center center fixed;
  background-size: 100% 100%;
}
/*记录 大奖*/
.history-msg{
  width: 93.6%;
  height: auto;
  overflow: hidden;
  margin: 1.2rem auto 1.5rem auto;
  background: #fff;
  border-radius: 0.5rem; 
}
.thead-box{
  width: 100%;
  font-size: 0.75rem;
  height: 1.5rem;
  line-height: 1.5rem;
  margin: 0.5rem auto;
  text-align: center;
  color: #666;
}
.thead-box view{
  width: 33.3%;
  float: left;
}
.list-msg-box{
  width: 100%;
  height: auto;
  margin-bottom: 1.5rem;
}
.list-msg-box .list-msg{
  height: 2.5rem;
  width: 100%;
  background: #f6f6f6
}
.list-msg-box .list-msg:nth-child(2n){
  background: #fff
}
.list-msg view{
  width: 33.3%;
  float: left;
  color: #333;
  text-align: center;
  line-height: 2.5rem;
  font-size: 0.75rem;
}
.list-msg .red{
  color: #f15246
}
.noData-box{
  width: 7rem;
  height: 9rem;
  margin: 7.5rem auto;
}
.noData-pic{
  width: 100%;
  height: 6rem;
}
.noData-pic image{
  width: 100%;
  height: 100%;
}
.noData-txt{
  color: #999;
  font-size: 1rem;
  line-height: 1.5rem;
  text-align: center;
}