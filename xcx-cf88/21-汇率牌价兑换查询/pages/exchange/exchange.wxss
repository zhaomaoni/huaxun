/* pages/exchange/exchange.wxss */
.title{
  height: 40px;
  line-height: 40px;
  background: #f1f1f1;
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
  font-size: 16px;
  padding-left: 15px;
}
.basis{
  width: 92%;
  height: 45px;
  margin: 0 auto;
  line-height: 45px;
  font-size: 16px;
  display: flex;
  overflow: hidden;
}
.basis view{
  flex: 1;
}
.basis input{
  height: 25px;
  line-height: 25px;
  margin: 10px 0;
  flex: 1;
  text-align: right
}
.change{
  width: 100%;
  margin-bottom: 90px;
  overflow: hidden;
  font-size: 16px;
}
.country{
  width: 92%;
  height: 35px;
  line-height: 35px;
  padding: 0 4%;
  border-bottom: 1px solid #ccc
}
.country .name{
  float: left
}
.country .money{
  float: right
}



/*  banner  */
.banner{
  width: 100%;
  height: 89px;
  position: fixed;
  bottom: 0;
}
.navImg{
  width: 100%;
  height: 100%
}
/* more小程序 */
.layerBoxs{
  width: auto;
  height: 26px;
  line-height: 26px;
  position: fixed;
  right: 0px;
  bottom: 100px;
  color: #fff;
  background: rgba(0,0,0,0.7);
  font-size: 12px;
  text-align: center;
  border-top-left-radius: 100px;
  border-bottom-left-radius: 100px
}
.layerBoxs view{
  padding: 0 10px;
}