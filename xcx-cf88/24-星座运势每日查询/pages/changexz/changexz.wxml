<view class="main">
  <view class="listBox" wx:for="{{list}}" wx:key data-index="{{item.constellation}}" bindtap='change'>
    <view class="listPic">
      <image src="{{item.img}}"></image>
    </view>
    <view class="listTxt">
      <view class="title">
        <text>{{item.name}}</text>
        <text>{{item.date}}</text>
      </view>
      <view class="content">{{item.content}}</view>
    </view>
  </view>
</view>
