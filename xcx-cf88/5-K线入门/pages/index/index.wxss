/* pages/index/index.wxss */
.box{
  width: 90%;
  margin: 15px auto;
}
.title{
  font-size: 18px;
  line-height: 30px;
  color: #444;
  border-bottom: 1px dashed #000;
}
.main{
  width: 100%;
  height: auto;
  overflow: hidden;
}
.main .content{
  height: 40px;
  width: 48%;
  background: linear-gradient(#FCFCFC, #d7d7d7);
  float: left;
  line-height: 40px;
  text-align: center;
  margin: 10px 0;
  border-radius: 10px;
  border: 1px solid #c5c5c5;
  font-size: 14px;
  color: #444;
}
.main .content:nth-child(2n){
  margin-left: 2.6%
}
/* more小程序 */
.layerBoxs{
  width: auto;
  height: 26px;
  line-height: 26px;
  position: fixed;
  right: 0px;
  bottom: 100px;
  color: #fff;
  background: rgba(0,0,0,0.7);
  font-size: 12px;
  text-align: center;
  border-top-left-radius: 100px;
  border-bottom-left-radius: 100px
}
.layerBoxs view{
  padding: 0 10px;
}

.shou-quan-layer{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.7)
}
.shou-quan-main{
  position: fixed;
  top: 50%;
  left: 50%;
  width: 90%;
  height: auto;
  margin-left: -45%;
  margin-top: -30%;
}
.shou-quan-txt{
  width: 100%;
  height: 2rem;
  margin-bottom: 2rem;
}
.shou-quan-txt image{
  width: 100%;
  height: 100%;
}
.shou-quan-btn{
  width: 6rem;
  height: 2.4rem;
  overflow: hidden;
  margin: 0 auto;
}
.shou-quan-btn button{
  padding: 0;
  display: block;
  width: 100%;
  height: 100%;
  background: transparent;
}
.shou-quan-btn image{
  width: 100%;
  height: 100%;
  display: block
}