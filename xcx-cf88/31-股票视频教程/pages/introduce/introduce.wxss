page{
  background: #f0f0f0;
}
.mainBox{
  width: 100%;
  height: auto;
  overflow: hidden;
  margin-bottom: 21px;
}
.picBox{
  width: 333px;
  height: 185px;
  overflow: hidden;
  text-align: center;
  margin: 21px auto 0 auto;
}
.picBox image{
  width: 100%;
  height: 100%;
}

/*  广告  */
.banner{
  width: 100%;
  height: 89px;
  position: fixed;
  bottom: 0;
  border-top: 1px solid #f6f6f6;
  overflow: hidden
}
.navImg{
  width: 100%;
  height: 100%
}
/* more小程序 */
.layerBoxs{
  width: auto;
  height: 26px;
  line-height: 26px;
  position: fixed;
  right: 0px;
  bottom: 100px;
  color: #fff;
  background: rgba(0,0,0,0.7);
  font-size: 12px;
  text-align: center;
  border-top-left-radius: 100px;
  border-bottom-left-radius: 100px
}
.layerBoxs navigator{
  padding: 0 10px;
}